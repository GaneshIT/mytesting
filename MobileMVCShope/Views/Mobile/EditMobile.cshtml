@model MobileMVCShope.Models.tblMobile

@{
    ViewBag.Title = "EditMobile";
}

<h2>EditMobile</h2>
<div class="row">
    <div class="col-md-12">        
        @using (Html.BeginForm())
        {
        <div class="form-group">
            <label for="Mobile">@Html.DisplayNameFor(obj => obj.Mobile)</label>
            @Html.TextBoxFor(obj => obj.Mobile, new { @class = "form-control" })
        </div>
        <div class="form-group">
            <label for="Model">@Html.DisplayNameFor(obj => obj.Model)</label>
            @Html.TextBoxFor(obj => obj.Model, new { @class = "form-control" })
        </div>
        <div class="form-group">
            <label for="Price">@Html.DisplayNameFor(obj => obj.Price)</label>
            @Html.TextBoxFor(obj => obj.Price, new { @class = "form-control" })
        </div>
        <div class="form-group">
            <label for="Description">@Html.DisplayNameFor(obj => obj.Description)</label>
            @Html.TextBoxFor(obj => obj.Description, new { @class = "form-control" })
        </div>
        <input type="submit" name="name" value="Update" class="btn btn-success" />
        <input type="button" name="name" value="Reset" class="btn btn-default" />
        }
    </div>
</div>

